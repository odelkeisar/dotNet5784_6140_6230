<Window x:Class="PL.Chef.SelectTaskOfChefWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Chef"
        mc:Ignorable="d"
        Title="SelectTaskOfChefWindow" Height="450" Width="800"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>

        <ListView Margin="5" Grid.Row="1" ItemsSource="{Binding Path=TaskList}"  SelectionChanged="PosibbleTask_SelectionChanged" MouseDoubleClick="ListView_MouseDoubleClick">
        <ListView.View>
            <GridView>
                <GridViewColumn/>
            </GridView>
        </ListView.View>
    </ListView>
    </Grid>
</Window>
