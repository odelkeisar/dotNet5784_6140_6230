<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">

    <Window.Resources>
        <!-- הגדרת סגנון לכפתורים -->
        <Style x:Key="MyButtonStyle1" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Width" Value="194"/>
            <Setter Property="BorderBrush" Value="#FFB95AD6"/>
            <Setter Property="Background" Value="#ADD8E6"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Bahnschrift SemiBold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Image Source="/image/back.jpg" Stretch="Fill"/>

        <Button Content="טיפול בשפים"  Click="ChefList_Click" Style="{StaticResource MyButtonStyle1}"  Margin="0,80,0,0" />
        <Button Content="ניקוי נתונים" Click="Reset_Click"   Style="{StaticResource MyButtonStyle1}" Margin="0,160,0,0"  />
        <Button Content="אתחול נתונים" Click="DataInitialization_Click"  Style="{StaticResource MyButtonStyle1}" Margin="0,240,0,0"/>


    </Grid>
</Window>
